<div class="page-body">
    <%- include('../partials/nav') %>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="mt-2 mb-2"><%- include('../partials/messages') %></div>
        <div class="row">
            <div class="col-sm-12 col-xl-12">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <form action="/department/<%= department_id%>/service/create" method="post" class="theme-form mega-form" enctype="multipart/form-data" autocomplete="off">
                                    <div class="mb-3">
                                        <div class="row align-items-baseline mt-3">
                                            <div class="col-lg-6">
                                                <div class="inner__border">
                                                    <label class="col-form-label">Service Title</label>
                                                    <span style="color: red">*</span>
                                                    <input type="text" class="form-control " name="name" required value="<%= inputData && inputData.name ? inputData.name : '' %>"  />
                                                </div>
                                            </div>

                                            <div class="col-lg-6">
                                                <div class="inner__border">
                                                    <label class="col-form-label">Daily Limit</label>
                                                    <span style="color: red">*</span>
                                                    <input type="number" class="form-control " name="daily_limit" required value="<%= inputData && inputData.daily_limit ? inputData.daily_limit : '' %>"  />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row align-items-baseline mt-3">
                                            <div class="col-lg-6">
                                                <div class="inner__border">
                                                    <label class="col-form-label">Status</label>
                                                        <div class="col-sm-9">
                                                            <div class="form-check radio radio-primary">
                                                                <input class="form-check-input" type="radio" id="active" name="status" value="true" checked>
                                                                <label class="form-check-label" for="active">Active</label>
                                                            </div>
                                                            <div class="form-check radio radio-primary">
                                                                <input class="form-check-input" type="radio" id="inactive" name="status" value="false">
                                                                <label class="form-check-label" for="inactive">Inactive</label>
                                                            </div>
                                                        </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-end" >
                                        <button class="btn btn-primary me-2 px-3 submit" type="submit">Save</button>
                                        <a  href="/department/<%= department_id%>/service"  role="button">
                                            <button class="btn btn-light px-3" type="button">
                                                Cancel
                                            </button>
                                        </a>
                                    </div>

                                </form>
                                
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/admins.js"></script>



